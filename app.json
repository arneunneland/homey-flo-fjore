{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "com.unneland.flofjore",
  "version": "0.9.12",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Norwegian tide levels",
    "no": "Flo og Fjære"
  },
  "description": {
    "en": "Adds Norwegian tide levels. Data from Norwegian Mapping Authority",
    "no": "Git tilgang til data om tidevann. Data hentes fra Kartverket"
  },
  "category": [
    "climate"
  ],
  "api": {
    "log": {
      "method": "GET",
      "path": "/log"
    }
  },
  "permissions": [
    "homey:manager:geolocation"
  ],
  "brandColor": "#0066ff",
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Arne Unneland",
    "email": "arne.unneland@gmail.com"
  },
  "flow": {
    "triggers": [
      {
        "id": "whenTideHighest",
        "title": {
          "en": "The tide is highest",
          "no": "Floa er høyest"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=tide"
          }
        ]
      },
      {
        "id": "whenTideLowest",
        "title": {
          "en": "The tide is lowest",
          "no": "Fjæra er lavest"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=tide"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "isTideHigh",
        "title": {
          "en": "Tide is high",
          "no": "Det er flo"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=tide"
          }
        ]
      },
      {
        "id": "isTideLow",
        "title": {
          "en": "The tide is low",
          "no": "Det er fjære"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=tide"
          }
        ]
      },
      {
        "id": "isTideRising",
        "title": {
          "en": "The tide is rising",
          "no": "Tidevannet stiger"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=tide"
          }
        ]
      },
      {
        "id": "isTideFalling",
        "title": {
          "en": "The tide is falling",
          "no": "Tidevannet synker"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=tide"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Norwegian tide",
        "no": "Flo og fjære"
      },
      "class": "other",
      "capabilities": [
        "tideLevel",
        "tideChangeShort",
        "tideChangeLong",
        "tideNextType",
        "tideNextTime"
      ],
      "capabilitiesOptions": {
        "tideLevel": {
          "decimals": 1,
          "units": "cm"
        },
        "tideChangeShort": {
          "decimals": 2,
          "units": "cm"
        },
        "tideChangeLong": {
          "decimals": 2,
          "units": "cm"
        }
      },
      "platforms": [
        "local"
      ],
      "connectivity": [],
      "images": {
        "small": "/drivers/tide/assets/images/small.png",
        "large": "/drivers/tide/assets/images/large.png",
        "xlarge": "/drivers/tide/assets/images/xlarge.png"
      },
      "pair": [
        {
          "id": "list_my_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices",
          "navigation": {
            "next": "done"
          }
        },
        {
          "id": "done",
          "template": "done"
        }
      ],
      "id": "tide",
      "settings": [
        {
          "id": "longitude",
          "type": "text",
          "label": {
            "en": "Longitude"
          },
          "value": "",
          "hint": {
            "en": "Longitude of the position"
          }
        },
        {
          "id": "latitude",
          "type": "text",
          "label": {
            "en": "Latitude"
          },
          "value": "",
          "hint": {
            "en": "Longitude of the position"
          }
        }
      ]
    }
  ],
  "capabilities": {
    "tideChangeLong": {
      "type": "number",
      "title": {
        "en": "Change next hour",
        "no": "Endring neste time"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "uiQuickAction": false,
      "icon": "/assets/icon.svg"
    },
    "tideChangeShort": {
      "type": "number",
      "title": {
        "en": "Change 10 min",
        "no": "Endring neste 10 min"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "uiQuickAction": false,
      "icon": "/assets/icon.svg"
    },
    "tideLevel": {
      "type": "number",
